{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student details</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ student.surname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('app_student_edit', {'id': student.id}) }}" class="btn btn-warning">Edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
